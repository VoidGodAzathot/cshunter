{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Counter Strike Hunter",
  "version": "1.1.0",
  "identifier": "ru.cshunter.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Preload Counter Strike Hunter",
        "width": 500,
        "height": 300,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "maximizable": false,
        "decorations": false,
        "center": true,
        "shadow": false,
        "visible": true,
        "closable": false
      },
      {
        "label": "cshunter",
        "url": "cshunter.html",
        "title": "Counter Strike Hunter",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "maximizable": true,
        "decorations": false,
        "center": true,
        "shadow": false,
        "visible": false
      }
    ],
    "security": {
      "capabilities": ["main", "cshunter"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.ico"
    ]
  }
}
